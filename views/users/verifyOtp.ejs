<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-12">
      <% if (locals.error) { %>
      <p style="color: red"><%= error %></p>
      <% } %> <% if (locals.success) { %>
      <p style="color: green"><%= success %></p>
      <% } %>
      <h1 class="text-center mb-4">Verify Your Account</h1>

      <form action="/verify-otp" method="POST">
        <!-- include email as a hidden field so controller receives it in req.body -->
        <input type="hidden" name="email" value="<%= email %>" />

        <div class="mb-3">
          <label for="otp" class="form-label">One-time password (OTP)</label>
          <input
            name="otp"
            id="otp"
            type="text"
            class="form-control"
            placeholder="Enter the 6-digit OTP"
            required
          />
        </div>

        <div class="d-flex justify-content-center mt-3 mb-5">
          <button class="btn btn-success">Verify</button>
        </div>
      </form>

  <form action="/resend-otp" method="POST" style="margin-top: 1rem">
        <!-- Hidden field to carry the email -->
        <input type="hidden" name="email" value="<%= email %>" />

        <button type="submit" class="btn btn-link">Resend OTP</button>
      </form>
    </div>
  </div>
</div>
