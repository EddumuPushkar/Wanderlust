<% if(Array.isArray(success) && success.length){ %>
    <div class="alert alert-success alert-dismissable fade show col-6 offset-3 sep"  role="alert">
        <%= success %>
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(Array.isArray(error) && error.length){ %>
    <div class="alert alert-danger alert-dismissable fade show col-6 offset-3 sep"  role="alert">
        <%= error %>
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>